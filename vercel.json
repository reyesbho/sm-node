{ 
    "version": 2, 
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "controllers/**",
                    "data/**",
                    "middlewares/**",
                    "models/**",
                    "routes/**",
                    "schemas/**",
                    "utils/**",
                    "views/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.js"
        }
    ]
}
